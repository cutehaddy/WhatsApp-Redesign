<ViewStatusScreen>:
	progressbar:progressbar
	pos_hint:{'top':1}
	MDBoxLayout:
		orientation:'vertical'
		padding:[dp(8), dp(8), dp(8), 0]
		MDProgressBar:
			id:progressbar
			value:0
			size_hint_y:None
			height:dp(12)
		MDRelativeLayout:
			size_hint_y:None
			height:dp(64)
			MDIconButton:
				icon:'arrow-left'
				pos_hint:{'center_x':0.08, 'center_y':0.5}
				on_release:root.back_btn()
			FitImage:
				source:root.source
				pos_hint:{'center_x':0.22, 'center_y':0.5}
				size_hint:(None, None)
				size:(dp(60), dp(60))
				radius:self.width/2
			MDBoxLayout:
				orientation:'vertical'
				pos_hint:{'center_x':0.42, 'center_y':0.5}
				size_hint_x:None
				width:dp(80)
				MDLabel:
					text:root.username
					font_size:dp(18)
				MDLabel:
					text:root.time
					font_size:dp(12)
			MDIconButton:
				pos_hint:{'center_x':0.9, 'center_y':0.5}
				icon:'dots-vertical'
		
		MDSmartTile:
			source:root.status_source


